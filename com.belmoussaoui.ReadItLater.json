{
  "id": "com.belmoussaoui.ReadItLater",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "read-it-later",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--share=network",
    "--talk-name=org.freedesktop.secrets"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUSTFLAGS": "--remap-path-prefix =../",
      "RUST_LOG": "read_it_later=info"
    }
  },
  "modules": [
    {
      "name": "read-it-later",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/World/read-it-later/uploads/5bc2c5a0cf0f31ae9ffd926367a2f22a/read-it-later-0.4.0.tar.xz",
          "sha256": "19f8cdd6d1573962ac256c0c6cfe2a2333c6e9be96df32eaf478b9ef7247cffe"
        }
      ]
    }
  ]
}
